    "style:file": "tsx scripts/review/style-file.ts",
    "style:all": "tsx scripts/review/style-all-files.ts",
    "fact-check:file": "tsx scripts/review/fact-check-file.ts",
    "fact-check:all": "tsx scripts/review/fact-check-all-files.ts",
    "link-check:file": "tsx scripts/review/link-check-file.ts",
    "link-check:all": "tsx scripts/review/link-check-all-files.ts",
