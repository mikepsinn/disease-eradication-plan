    "validate:frontmatter": "tsx scripts/validate-frontmatter.ts",
    "fix:frontmatter": "tsx scripts/validate-frontmatter.ts --fix",
    "fix:frontmatter:issues": "tsx scripts/review/fix-frontmatter-issues.ts",
    "build": "quarto render && quarto render _dih.yml && quarto render _1percenttreaty.yml",
    "build:html": "quarto render . --to html",
    "build:pdf": "quarto render . --to pdf",
    "build:pptx": "quarto render presentation.qmd --to pptx",
    "build:presentation": "quarto render presentation.qmd",
    "preview:presentation": "quarto preview presentation.qmd",
    "preview:book": "quarto preview .",
    "preview:dih": "quarto preview dih-index.qmd",
    "quarto:preview": "quarto preview .",
    "clean": "pnpm rimraf .quarto _book",
    "validate:all": "npm run validate:frontmatter && npm run lint:md && npm run lint:qmd",
    "fix:all": "npm run fix:frontmatter:issues && npm run lint:md:fix && npm run lint:qmd:fix && npm run format:spacing",
    "build:1percenttreaty": "quarto render --metadata-file _1percenttreaty.yml",
    "build:treaty": "pnpm clean && pnpm build:1percenttreaty",
    "build:dih": "quarto render dih-index.qmd --to html",
    "build:dih:full": "quarto render --profile dih",
    "claude:opus": "claude --model claude-opus-4-1-20250805",
    "copy-guides": "tsx scripts/copy-guides.ts",
    "images:analyze": "tsx scripts/generate-image-metadata.ts",
    "images:analyze:all": "tsx scripts/generate-image-metadata.ts --all",
    "images:guide": "tsx scripts/generate-image-metadata.ts --guide-only",
    "prepare": "husky"
