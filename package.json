    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^9.2.0",
    "markdownlint": "^0.29.0",
    "markdownlint-cli": "^0.39.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
